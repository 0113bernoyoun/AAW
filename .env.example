# AAW Environment Configuration Template
# Copy this file to .env and adjust values as needed

# ============================================
# Runner Configuration
# ============================================
# WebSocket URL for backend connection
# - When backend is in Docker, runner on host: ws://host.docker.internal:8080/ws/logs
# - When both in Docker: ws://backend:8080/ws/logs
# - Local development: ws://localhost:8080/ws/logs
AAW_BACKEND_URL=ws://host.docker.internal:8080/ws/logs

# Maximum number of parallel tasks the runner can execute
AAW_MAX_PARALLEL_TASKS=5

# Enable real-time streaming (character-level output)
# Set to 'true' for immediate output, 'false' for line-buffered (default)
AAW_REALTIME_STREAMING=false

# ============================================
# Database Configuration
# ============================================
DB_NAME=aaw
DB_USER=aawuser
DB_PASSWORD=aawpass
DB_PORT=5433

# Redis Configuration
REDIS_PORT=6379

# Backend Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
SHOW_SQL=false

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
